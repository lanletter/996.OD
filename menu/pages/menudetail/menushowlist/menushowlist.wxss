.show {
  margin-top: 40rpx;
  margin-left: 40rpx;
  margin-bottom: 72rpx;
}

.show .titlebig {
  height: r66px;
  font-size: 48rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(31, 31, 31, 1);
  line-height: 66rpx;
}

.show .noshow {
  display: block;
  margin: 116rpx 0;
  width: 100%;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(214, 214, 214, 1);
  line-height: 44rpx;
  text-align: center;
}

.show .ulist {
  margin-top: 20rpx;
  width: 100%;
  overflow: hidden;
}

.show .ulist .list {
  box-sizing: border-box;
  display: inline-block;
  width: 320rpx;
  height: 558rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  border: 1rpx solid #ededed;
  margin-right: 30rpx;
  margin-bottom: 60rpx;
  position: relative;
}

.show .ulist .list .titlepic {
  margin: -1rpx -1rpx 0 -1rpx;
  width: 320rpx;
  height: 320rpx;
  border-radius: 16rpx 16rpx 0px 0rpx;
}

.show .ulist .list .userinfo {
  margin-top: 20rpx;
  height: 48rpx;
}

.show .ulist .list .userinfo image {
  float: left;
  height: 48rpx;
  width: 48rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-right: 12rpx;
}

.show .ulist .list .userinfo text {
  float: left;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(154, 154, 154, 1);
  height: 48rpx;
  line-height: 48rpx;
}

.show .ulist .list .content {
  margin: 20rpx 36rpx 20rpx 30rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(31, 31, 31, 1);
  line-height: 34rpx;
  width: 240rpx;
  height: 68rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.show .ulist .list .like {
  position: absolute;
  left: 20rpx;
  bottom: 16rpx;
}

.show .ulist .list .like image {
  float: left;
  width: 48rpx;
  height: 48rpx;
}

.show .ulist .list .like text {
  float: left;
  margin-left: 8rpx;
  height: 48rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(200, 175, 112, 1);
  line-height: 48rpx;
}

.footer{
  width: 100%;
  height: 52rpx;
  margin-bottom: 48rpx;
  position: relative;
}
.footer .txt{
  width: 100%;
  text-align: center;
font-size:28rpx;
font-family:PingFangSC-Semibold;
font-weight:600;
color:rgba(214,214,214,1);
line-height:52rpx;
}
.footer .leftline{
  position: absolute;
  left: 40rpx;
  top:26rpx;
  width: 60rpx;
  border-top: 1px solid #D6D6D6;
}
.footer .rightline{
  position: absolute;
  right: 40rpx;
  top:26rpx;
  width: 60rpx;
  border-top: 1px solid #D6D6D6;
}
