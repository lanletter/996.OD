.ask {
  margin-bottom: 160rpx;
}
.ask .noask {
  margin: 78rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.ask .noask image {
  margin: 0 auto;
  width: 160rpx;
  height: 160rpx;
}

.ask .noask text {
  display: block;
  margin-top: 14rpx;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(31, 31, 31, 1);
  line-height: 40rpx;
  text-align: center;
}

.ask .askcontent {
  display: block;
  font-size: 48rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(31, 31, 31, 1);
  line-height: 66rpx;
  margin-left: 50rpx;
  width: 554rpx;
}

.ask .askinfo {
  margin: 28rpx 40rpx 40rpx 40rpx;
  padding: 28rpx 0;
  width: 670rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px dotted #d6d6d6;
  border-bottom: 1px dotted #d6d6d6;
}

.ask .askinfo .leftinfo {
  height: 72rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.ask .askinfo .leftinfo image {
  height: 72rpx;
  width: 72rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.ask .askinfo .leftinfo text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(154, 154, 154, 1);
  height: 72rpx;
  line-height: 72rpx;
}

.ask .askinfo .rightinfo {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(154, 154, 154, 1);
  line-height: 72rpx;
}

.ask .ulist {
  margin-left: 40rpx;
  width:670rpx;
background:rgba(255,255,255,1);
box-shadow:4rpx 10rpx 32rpx 0rpx rgba(0,0,0,0.14);
border-radius:16rpx;
}

.ask .ulist .list {
  border-bottom: 1px solid rgba(237, 237, 237, 1);
}

.ask .answer {
  padding: 28rpx 0 0 40rpx;
  border-radius: 18rpx;
  position: relative;
}
.ask .answer .best{
  position: absolute;
  top: 10rpx;
  right: -30rpx;
  width: 160rpx;
  height: 80rpx;
}
.ask .answer .answerinfo {
  display: block;
  overflow: hidden;
}

.ask .answer .answerinfo image {
  float: left;
  height: 48rpx;
  width: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.ask .answer .answerinfo text {
  float: left;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #1F1F1F;
  height: 48rpx;
  line-height: 48rpx;
}

.ask .answer .answercontent {
  width: 602rpx;
  margin-top: 20rpx;
  display: block;
font-size:36rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(31,31,31,1);
line-height:56rpx;
}

.ask .answer .bottominfo{
  width: 576rpx;
  height: 48rpx;
  margin-top: 14rpx;
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.ask .answer .bottominfo .answertime{
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(154,154,154,1);
line-height:48rpx;
}

.ask .answer .like {
  height: 48rpx;
  overflow: hidden;
}

.ask .answer .like image {
  float: left;
  width: 48rpx;
  height: 48rpx;
}

.ask .answer .like text {
  float: left;
  margin-left: 8rpx;
  height: 48rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(200, 175, 112, 1);
  line-height: 48rpx;
}

.ask .answer .answercount {
  height: 76rpx;
  line-height: 76rpx;
  margin-top: 32rpx;
  border-top: 1px solid #e7e7e7;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(200, 175, 112, 1);
}

.footer {
  width: 100%;
  height: 52rpx;
  padding-bottom: 48rpx;
  position: fixed;
  bottom: 0;
  background: #ffffff;
}

.footer .txt {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(214, 214, 214, 1);
  line-height: 52rpx;
}

.footer .leftline {
  position: absolute;
  left: 40rpx;
  top: 26rpx;
  width: 60rpx;
  border-top: 1px solid #d6d6d6;
}

.footer .rightline {
  position: absolute;
  right: 40rpx;
  top: 26rpx;
  width: 60rpx;
  border-top: 1px solid #d6d6d6;
}
