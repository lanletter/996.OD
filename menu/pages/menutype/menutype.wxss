
.ulist {
  margin-top: 40rpx;
  margin-left: 40rpx;
}

.ulist .list {
  position: relative;
  margin: 0 30rpx 60rpx 0;
  width: 320rpx;
  overflow: hidden;
  float: left;
}

.ulist .headpic {
  width: 320rpx;
  height: 320rpx;
  border-radius: 16rpx;
}

.ulist .info {
  margin-top: 18rpx;
  margin-left: 26rpx;
}

.info .titlemin {
  display: block;
  width: 320rpx;
  height: 100rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(31, 31, 31, 1);
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info .icons {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 16rpx;
  height: 32rpx;
}

.info .icons .pageview {
  margin-right: 32rpx;
}

.info .icons .icon image {
  float: left;
  height: 32rpx;
  width: 32rpx;
  vertical-align: top;
  margin-right: 6rpx;
}

.info .icons .icon text {
  float: left;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(154, 154, 154, 1);
}
/*footer*/

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 165rpx;
  border-top: 1px solid #ededed;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #fff;
}

.footer .tabbtn {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.footer .icon {
  margin: 10rpx auto;
  margin-bottom: 0;
  width: 48rpx;
  height: 48rpx;
}

.footer .txt {
  margin-top: 16rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  line-height: 28rpx;
  text-align: center;
}

.footer .txtgold {
  color: rgba(200, 175, 112, 1);
}

.footer .txtgrey {
  color: #d6d6d6;
}
