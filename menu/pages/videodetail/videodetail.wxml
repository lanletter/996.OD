<video id="myVideo" class="videobox" poster='{{data.picture.path}}' src="{{data.url}}" objectFit="contain" controls>
</video>

<!--header-->
<view class='header'>
  <text class='title'>{{data.title}}</text>
  <view class='icons'>
    <view class='icon pageview'>
      <image src='/imgs/MenuView.png'></image>
      <text>{{data.viewCount}}</text>
    </view>
    <view class='icon favorcount'>
      <image src='/imgs/MenuCollection.png'></image>
      <text class='favorcount'>{{data.viewCount}}</text>
    </view>
  </view>
</view>

<!--basic contenter-->
<view class='contenter'>
  <!--富文本-->
  <rich-text class='instructions' nodes="{{data.content}}"></rich-text>
  <view class='tips' wx:if="{{(data.remark.length>0)==true}}">
    <view class='dot'></view>
    <text>{{data.remark}}</text>
  </view>
</view>

<!-- 推荐菜谱 -->
<view class='show'>
  <view>
    <text class='titlebig'>菜谱推荐</text>
  </view>
  <block wx:if="{{(datalist.length>0)==true}}">
    <scroll-view scroll-x class='ulist'>
      <view class='list' wx:for="{{datalist}}" wx:for-item="value" wx:key="value">
        <image class='titlepic' mode='aspectFill' src='{{value.picture.path}}'></image>
        <cover-view class='time'>
          <cover-image class='icon' src='/imgs/timebg.png'></cover-image>
          {{value.time}}
        </cover-view>
        <text class='titlemin'>{{value.title}}</text>
        <view class='icons'>
          <view class='icon pageview'>
            <image src='/imgs/MenuView.png'></image>
            <text>{{value.viewCount}}</text>
          </view>
          <view class='icon favorcount'>
            <image src='/imgs/MenuCollection.png'></image>
            <text class='favorcount'>{{value.viewCount}}</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </block>
  <block wx:else>
    <text class='noshow'>暂无作品</text>
  </block>
</view>

<!-- 推荐视频 -->
<view class='recommend'>
  <view>
    <text class='titlebig'>视频推荐</text>
  </view>
  <view class='ulist'>
    <view class='list' wx:for="{{datalist}}" wx:for-item="value" wx:key="value">
      <image class='picture' mode='aspectFill' src='{{value.picture.path}}'></image>
      <text class='titlemin'>{{value.title}}</text>
      <cover-view class='time'>
        <cover-image class='icon' src='/imgs/timebg.png'></cover-image>
        {{value.time}}
      </cover-view>
    </view>
  </view>
</view>

<!-- footer -->
<view class='footer'>
  <navigator url="/pages/videolist/videolist?title=navigate" hover-class="none" class='tabbtn'>
    <image class='icon' src='/imgs/MenuCollection.png'></image>
    <text class='txt txtgrey'>收藏</text>
  </navigator>
  <navigator url="/pages/videolist/videolist?title=navigate" hover-class="none" class='tabbtn'>
    <image class='icon' src='/imgs/IconsShare.png'></image>
    <text class='txt txtgold'>分享给好友</text>
  </navigator>
</view>