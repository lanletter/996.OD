/* pages/home/home.wxss */

.gap1 {
  display: block;
  margin: 60rpx 40rpx 0 40rpx;
  overflow: hidden;
}

.search {
  margin: 20rpx 40rpx 0 40rpx;
  width: 670rpx;
  height: 88rpx;
  background: #f4f4f4;
  border-radius: 49rpx;
}

.searchicon {
  width: 48rpx;
  height: 48rpx;
  margin: 20rpx 22rpx 20rpx 40rpx;
  float: left;
}

.searchtxt {
  float: left;
  color: #b2b2b2;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  font-size: 28rpx;
  line-height: 88rpx;
}

.bigimg {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.homeicon {
  width: 320rpx;
  height: 320rpx;
}

.homeicon image {
  width: 320rpx;
  height: 320rpx;
}

.bigtitle {
  height: 66rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Semibold;
  font-weight: bold;
  color: rgba(31, 31, 31, 1);
  line-height: 66rpx;
}

.more {
  float: right;
  width: 100rpx;
  height: 66rpx;
  line-height: 66rpx;
}

.more text {
  float: left;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  color: rgba(31, 31, 31, 1);
}

.more image {
  float: left;
  width: 44rpx;
  height: 44rpx;
  margin-top: 11rpx;
}

.menucover {
  margin-top: 24rpx;
  width: 670rpx;
  height: 474rpx;
  position: relative;
}

.menucover image {
  width: 670rpx;
  height: 474rpx;
  border-radius: 12rpx;
}

.menucover .title {
  position: absolute;
  top: 320rpx;
  margin: 0 40rpx;
  width: 590rpx;
  height: 66rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #fff;
  line-height: 66rpx;
  overflow: hidden;
}

.menucover .counts {
  position: absolute;
  bottom: 40rpx;
  left:42rpx;
  width: 590rpx;
  height: 44rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.menucover .counts cover-view{
height:44rpx;
font-size:32rpx;
font-family:PingFangSC-Semibold;
font-weight:600;
color:rgba(255,255,255,1);
line-height:44rpx;
}

.gap2 {
  display: block;
  margin: 64rpx 0 0 34rpx;
  margin-bottom: 320rpx;
}

.hotlist {
  margin-bottom: 38rpx;
  height: 96rpx;
  overflow: hidden;
}

.hotlist .icon {
  float: left;
  width: 96rpx;
  height: 96rpx;
}

.hotlist .jump {
  float: left;
  margin-left: 48rpx;
  width: 572rpx;
  height: 94rpx;
  border-bottom: 1px solid #ededed;
}

.hotlist .more {
  float: right;
  margin-top: 25rpx;
  margin-right: 44rpx;
  width: 44rpx;
  height: 44rpx;
}

.hotlist .txt {
  line-height: 94rpx;
  font-size: 36rpx;
  color: #666;
}

.tabselect {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 165rpx;
  border-top: 1px solid #ededed;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #fff;
}

.tabselect .tabbtn {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.tabselect .icon {
  margin: 10rpx auto;
  margin-bottom: 0;
  width: 48rpx;
  height: 48rpx;
}

.tabselect .txt {
  margin-top: 16rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  line-height: 28rpx;
  text-align: center;
}

.tabselect .txtgold {
  color: rgba(200, 175, 112, 1);
}

.tabselect .txtgrey {
  color: #d6d6d6;
}
